<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net8.0;net9.0</TargetFrameworks>
    <RootNamespace>Ultrafast.Ufsecp</RootNamespace>
    <AssemblyName>Ufsecp</AssemblyName>
    <Version>3.4.0</Version>
    <Authors>UltrafastSecp256k1 Contributors</Authors>
    <Description>C# P/Invoke bindings for UltrafastSecp256k1 â€” high-performance secp256k1 ECC (ufsecp C ABI v1)</Description>
    <PackageId>Ufsecp</PackageId>
    <PackageTags>secp256k1;ecdsa;schnorr;bitcoin;cryptography;ufsecp;taproot;bip32</PackageTags>
    <PackageLicenseExpression>AGPL-3.0-only</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/AvraSasmo/UltrafastSecp256k1</PackageProjectUrl>
    <RepositoryUrl>https://github.com/AvraSasmo/UltrafastSecp256k1</RepositoryUrl>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
  </PropertyGroup>

  <!-- Bundle native libraries for multi-RID NuGet package -->
  <ItemGroup>
    <Content Include="runtimes\**\*" Pack="true" PackagePath="runtimes" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>
</Project>
